---
import { Icon } from "astro-icon";
import "../styles/tailwind.css";

const { section } = Astro.props;
---

<div
  slot="scroll-caret"
  id="scroll-caret"
  class=`fade-out-on-transition flex ${ section === "info" && "-translate-y-[3vh] opacity-0 scale-75" } transition-all duration-1000 flex-col justify-end`
>
  <Icon
    pack="ph"
    name="caret-up"
    height="60"
    width="60"
    data-scroll-icon
    class="w-fit animate-pulse cursor-pointer self-center text-center text-gray-400 opacity-30"
  />
</div>
