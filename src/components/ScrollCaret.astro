---
import { Icon } from "astro-icon";
import "../styles/tailwind.css";
---

<div
  slot="scroll-caret"
  id="scroll-caret"
  class="fade-out-on-transition flex -translate-y-[5vh] flex-col justify-end"
>
  <Icon
    pack="ph"
    name="caret-up"
    height="60"
    width="60"
    data-scroll-icon
    class="w-fit animate-pulse cursor-pointer self-center text-center text-gray-400 opacity-30"
  />
</div>
