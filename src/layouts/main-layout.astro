---
import "../styles/tailwind.css";
---

<main
  class="flex h-full w-full flex-col items-center p-4 pb-0 pt-4 lg:p-8 lg:pb-0"
>
  <header class="header flex w-full flex-col items-center">
    <slot name="nav" />
    <slot name="subheader" />
  </header>
  <div
    data-info-container
    class="flex h-full w-[90vw] flex-col gap-4 overflow-scroll overflow-x-clip bg-blue-smoke p-8 text-gray-200 shadow-xl lg:w-[70vw]"
  >
    <div>
      <slot name="about" />
    </div>
    <div class="flex">
      <div class="flex w-full flex-col gap-8">
        <div class="flex gap-2">
          <div>
            <slot name="portfolio" />
          </div>
          <div class="flex h-full w-full items-end justify-center pl-2">
            <slot name="flav-text-a" />
          </div>
        </div>
        <div class="flex">
          <!-- id is used to automatically scroll into view when expanded, see Tech.astro script -->
          <div id="tech-section">
            <slot name="tech" />
          </div>
          <div class="h-full w-full pl-2 pt-14">
            <slot name="flav-text-b" />
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
