---
import "../styles/tailwind.css";
---

<main
  class="flex h-full w-full flex-col items-center overflow-x-clip p-4 pb-0 pt-4 lg:p-8 lg:pb-0"
>
  <header class="header flex w-full flex-col items-center">
    <slot name="nav" />
    <slot name="subheader" />
  </header>

  <div
    data-info-container
    class="flex w-[90vw] flex-col gap-4 bg-blue-smoke p-8 text-gray-200 shadow-xl lg:w-[70vw]"
  >
    <div
      class="collision-obj -top-8 left-0 flex h-7 w-[90vw] items-end justify-center lg:w-[70vw]"
    >
    </div>
    <div>
      <slot name="about" />
    </div>
    <div class="flex">
      <div class="flex w-full flex-col gap-8">
        <div class="flex gap-2">
          <div class="w-full">
            <slot name="portfolio" />
          </div>
          <div class="flex h-full w-full items-center pl-2">
            <slot name="flav-text-a" />
          </div>
        </div>
        <div class="flex">
          <!-- id is used to automatically scroll into view when expanded, see Tech.astro script -->
          <div id="tech-section" class="w-full">
            <slot name="tech" />
          </div>
          <div class="h-full w-full pl-2 pt-14">
            <slot name="flav-text-b" />
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
