---
import "../styles/tailwind.css";
---

<section
  id="about"
  data-about-translate-up
  class="absolute top-[100vh] flex h-fit w-full flex-col items-center p-4 pb-0 pt-0 transition-[top] duration-[1300ms] ease-in-out lg:p-8 lg:pb-0 lg:pt-0"
>
  <div
    id="nav-check"
    class="h-0 w-full  bg-red-100 opacity-40 transition-[height] duration-700 ease-out"
  >
    <slot name="caret" />
  </div>
  <header class="h-[10vh] w-full">
    <!-- <slot name="nav" /> -->
  </header>
  <div class="flex w-[90vw] flex-col items-center text-gray-200 lg:w-[75vw]">
    <header class="header flex w-full flex-col items-center">
      <slot name="caption-container" />
    </header>
    <!-- <div
      class="collision-obj -top-8 left-0 flex h-7 w-[90vw] items-end justify-center lg:w-[75vw]"
    >
    </div> -->
    <section id="text-content" class="bg-blue-smoke p-8 shadow-xl">
      <slot name="about" />
      <div class="flex gap-2">
        <div class="w-full">
          <slot name="portfolio" />
        </div>
        <aside class="flex h-full w-full items-center pl-2">
          <slot name="flav-text-a" />
        </aside>
      </div>
      <div class="flex">
        <!-- id is used to automatically scroll into view when expanded, see Tech.astro script -->
        <div id="tech-section" class="w-full">
          <slot name="tech" />
        </div>
        <aside class="h-full w-full pl-2 pt-14">
          <slot name="flav-text-b" />
        </aside>
      </div>
    </section>
  </div>
</section>
