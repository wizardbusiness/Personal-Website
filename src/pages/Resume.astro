---
import CommonLayout from "../layouts/common-layout.astro";
import Nav from "../components/Nav.astro";
---

<CommonLayout>
  <div slot="page" class="flex h-full w-full content-center">
    <div
      class="nav-container fixed top-[-8vh] z-20 flex h-[8vh] w-full items-center bg-dusk opacity-90"
    >
      <Nav />
    </div>
    <iframe
      allowtransparency="true"
      style="opacity: 0"
      src="https://drive.google.com/file/d/1243MRw12jWwavSvlrgV2EI2oTzAuGZDE/preview?"
      width="100%"
      height="100%"></iframe>
  </div>
</CommonLayout>

<script>
  const iframe = document.querySelector("iframe");
  iframe.onload = () => {
    iframe.classList.add("animate-fade-in-resume");
  };

  // listen for mouse activity
  window.addEventListener("mousemove", () => {
    showNav();
  });
  // get nav current position
  // slide nav down to max from current position
  function showNav() {
    const nav = document.querySelector(".nav-container");
    nav.classList.add("animate-slide-down");
    // nav.getBoundingClientRect();
  }
  // set timeout from last activity
  // when timeout expires slide nav up to hidden position
</script>
